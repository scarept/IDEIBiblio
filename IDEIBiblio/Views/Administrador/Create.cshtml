@model IDEIBiblio.Models.Administrador

@{
    ViewBag.Title = "Create";
    IDEIBiblio.Models.RegisterModel reg_mod = new IDEIBiblio.Models.RegisterModel();
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Administrador</legend>
        <div>
            @Html.LabelFor(model => reg_mod.UserName)
            @Html.TextBoxFor(model => reg_mod.UserName)

        </div>
        <div>
            @Html.LabelFor(model => reg_mod.Password)
            @Html.PasswordFor(model => reg_mod.Password)
        </div>
        <div>
            @Html.LabelFor(model => reg_mod.ConfirmPassword)
            @Html.PasswordFor(model => reg_mod.ConfirmPassword)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nome)
            @Html.ValidationMessageFor(model => model.nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.mail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.mail)
            @Html.ValidationMessageFor(model => model.mail)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

