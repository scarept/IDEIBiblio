@model IEnumerable<IDEIBiblio.Models.Livro>

@{
    ViewBag.Title = "Index";
}

<h2>Eliminar Livros</h2>

<img src="~/Images/bar.png" width="1000"/>
<table width="1000">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.editora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.preco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isbn)
        </th>
        <th>
            Ano
        </th>
        <th>Capa</th>
        <th>&nbsp;</th>
    </tr>
    <tr><td colspan="8"><img src="~/Images/smallbar.png" width="1000"/></td></tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.editora)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.preco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.categoria.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isbn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.publicação)
        </td>
        <td>
            <img src="../@Html.DisplayFor(modelItem => item.path_img)" alt="Imagem" width="75" height="100"/></td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID }) 
        </td>
    </tr>
}

</table>
