@model IEnumerable<IDEIBiblio.Models.Revista>

@{
    ViewBag.Title = "Editar Revistas";
}

<h2>Editar Revistas</h2>

<div class="editor-label">
    
</div>
<img src="~/Images/bar.png" width="1000" />
<table width="1000">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.editora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.preco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.categoria)
        </th>
        <th></th>
    </tr>
    <tr><td colspan="5"><img src="~/Images/smallbar.png" width="1000" /></td></tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.editora)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.preco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.categoria.nome)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID })
             | 
            @Html.ActionLink("Details", "Details", new { id = item.ID })
        </td>
    </tr>
}

</table>
